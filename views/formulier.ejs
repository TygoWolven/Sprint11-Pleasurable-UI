<%- include('./partials/head', {current: '/opdracht-aanmelden'}); %>

<header class="smallHeader">
    <h3 class="smallTitle">Maak je eigen initiatief aan</h3>
    <h1 class="title">Formulier</h1>
</header>

<ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/opdracht-aanmelden">Opdracht aanmelden</a></li>
    <li>Formulier</li>
</ul>


<main class="noJs">
    <section class="container padding5">
        <div class="gridForm">
            <form id="aanmeldForm" method="POST" action="/succes" >

                <fieldset class="visible" id="step1">
                    <div>
                        <legend>Persoonlijke gegevens</legend>
                        <h3 class="smallTitle"><span>Stap 1</span> / 3</h3>
                    </div>
                    
                    <div class="col2">
                        <div>
                            <label class="req" for="name">Voornaam</label>
                            <input type="text" id="name" name="name" minlength="2" required placeholder="Naam"/>
                        </div>
                        
                        <div>
                            <label class="req" for="surname">Achternaam</label>
                            <input type="text" id="surname" name="surname" minlength="2" required placeholder="Achternaam"/>
                        </div>
                    </div>
                    

                    <label class="req" for="email">E-mail</label>
                    <input type="email" name="email" id="email" placeholder="naam@email.com" required>

                    <label class="req" for="vraagAanbod">Vraag of aanbod?</label>

                        <div>
                            <input type="radio" id="vraag" name="vraagAanbod" value="Vraag">
                            <label for="vraag">Vraag</label>
                        </div>
                        
                        <div>
                            <input type="radio" id="aanbod" name="vraagAanbod" value="Aanbod">
                            <label for="aanbod">Aanbod</label>
                        </div>
                    

                    <label class="req" for="buurt-select">In welke buurt woont u?:</label>
                    <div class="col2">
                        <select name="buurt" id="buurt-select" required>
                            <option value="">--Kies een buurt--</option>
                            <option value="bos-en-lommer">Bos en Lommer</option>
                            <option value="westerpark">Westerpark</option>
                            <option value="de-baarsjes">De Baarsjes</option>
                            <option value="oud-west">Oud West</option>
                            <option value="nieuw-west">Nieuw West</option>
                        </select>
                    </div>

                    <button type="button" class="btn btnNext" onclick="showNextFieldset('step1', 'step2')">Volgende stap</button>

                </fieldset>

                <fieldset id="step2">
                    <div>
                        <legend>Initiatief informatie</legend>
                        <h3 class="smallTitle"><span>Stap 2</span> / 3</h3>
                    </div>

                    <label class="req" for="name">
                        Titel initiatief
                    </label>
                    <input type="text" name="titel" placeholder="Titel initiatief" minlength="2" required>

                    <label class="req" for="description">
                        Beschrijf uw initiatief
                    </label>
                    <textarea name="description" id="description" cols="30" rows="10" minlength="5" placeholder="Beschrijf uw initiatief" required></textarea>

                    <label for="category">Kies uw categoriÃ«n:</label>
                    <div>
                        <label for="tuin"><input type="checkbox" name="category" id="tuin" value="Tuin"><span>Tuin</span></label>
                        <label for="feest"><input type="checkbox" name="category" id="feest" value="Feest"><span>Feest</span></label>
                        <label for="voertuig">
                            <input type="checkbox" name="category" id="voertuig" value="Voertuig">
                            <span>Voertuig</span>
                        </label>
                        <label for="hulp"><input type="checkbox" name="category" id="hulp" value="Hulp"><span>Hulp</span></label>
                        <label for="buiten"><input type="checkbox" name="category" id="buiten" value="Buiten"><span>Buiten</span></label>
                        <label for="binnen"><input type="checkbox" name="category" id="binnen" value="Binnen"><span>Binnen</span></label>
                    </div>
                    
                    <label for="image">Upload afbeelding</label>
                    <input type="file" id="image" name="image" accept="image/png, image/jpeg" />

                    <div class="containerButtons">
                        <!-- BACK BUTTON -->
                        <button type="button" class="btn btnBack" onclick="showPreviousFieldset('step1', 'step2')">Terug</button>
                        <!-- NEXT BUTTON -->
                        <button type="button" class="btn btnNext" onclick="showNextFieldset('step2', 'step3')">Volgende stap</button>
                    </div>
                    
                </fieldset>
                    

                </fieldset>

                <fieldset id="step3">
                    <div>
                        <legend>Locatie en tijd</legend>
                        <h3 class="smallTitle"><span>Stap 3 / 3</span></h3>
                    </div>

                    <div class="col2">
                        <div>
                            <label class="req" for="start">Start datum:</label>
                            <input type="date" id="startDate" name="trip-start" required min="20-05-2024"/>
                        </div>   
                        <div>
                            <label class="req" for="end">Eind datum:</label>
                            <input type="date" id="endDate" name="trip-end" required min="20-05-2024"/>
                        </div>   
                    </div>
                    

                    <div class="col2">
                        <div>
                            <label class="req" for="startTime">Start tijd</label>
                            <input type="time" name="startTime" required min="07:00" max="24:00">
                        </div>
                        <div>
                            <label class="req" for="endTime">Eind tijd</label>
                            <input type="time" name="endTime" required min="07:00" max="24:00">
                        </div>
                    </div>

                    <div class="containerButtons">
                            <!-- BACK BUTTON -->
                        <button type="button" class="btn btnBack" onclick="showPreviousFieldset('step2', 'step3')">Terug</button>
                            <!-- SEND BUTTON -->
                        <button type="submit" class="btn">Verzend</button>
                    </div>

                </fieldset>

            </form>
        </div>
    </section>
</main>

<%- include('./partials/foot') %>