<%- include('./partials/head', {current: '/initiatief'}); %>

<!-- Detail Section -->
<section id="detail">

  <% if (hallenData.image) { %>
    <img src="https://fdnd-agency.directus.app/assets/<%= hallenData.image %>">
  <% } %>
  
  <div class="detailBackdrop"></div>

  <div class="detailContent">
    <div class="description">
      <a href="/initiatief/<%= hallenData.id %>"><h1 class="capsLock"><%= hallenData.title %></h1></a>

      <% if (hallenData.start_date) { %>
        <p>
          <span><%= hallenData.start_date %>
          <% if (hallenData.end_date) { %>
            tot <%= hallenData.end_date %></span>
          <% } %>
        </p>
      <% } %>
      
      <p><%- hallenData.long_description %></p>
    </div>
  </div>

  <!-- Back Button -->
  <a href="/" class="extraBold">
    Terug
  </a>

  <!-- Scroll Hint Icons -->
  <div class="scrollIcons">
    <a href="#detailcontact">
      <p class="capsLock extraBold">Bekijk contactgegevens</p>
      <svg fill="#000000" width="33px" height="33px" viewBox="0 0 32 32" version="1.1" xmlns="http://www.w3.org/2000/svg">
        <path d="M16.049 0c-4.941 0-9.047 4.007-9.047 8.948v14.104c0 4.942 4.105 8.948 9.047 8.948s8.948-4.007 8.948-8.948v-14.104c0-4.941-4.007-8.948-8.948-8.948v-0zM22.998 23.052c0 3.831-3.117 6.948-6.948 6.948s-7.047-3.117-7.047-6.948v-14.104c0-3.831 3.216-6.948 7.047-6.948s6.948 3.117 6.948 6.948v14.104zM16.011 6c-0.552 0-1 0.448-1 1v5c0 0.552 0.448 1 1 1s1-0.448 1-1v-5c0-0.552-0.448-1-1-1z"></path>
      </svg>
      <svg width="25px" height="25px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M6 9L12 15L18 9" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </a>
  </div>

  <div class="likePopup">
    <h3>Vind je dit initiatief nuttig?</h3>
    <form class="like" action="/initiatief/<%= hallenData.id %>" method="post">
      <input type="hidden" name="actie" value="like" />
      <button type="submit" class="extraBold" id="answerYes">Ja</button>
    </form>
    <button class="extraBold" id="answerNo">Nee</button>
    <%- include('partials/likes') %> <span>mensen vonden het nuttig</span>
  </div>

  <div class="shapeDividerBottom">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M1200 120L0 16.48 0 0 1200 0 1200 120z" class="shape-fill"></path>
    </svg>
  </div>
</section>

<section id="detailcontact">
  <img src="/images/pfinitiatief.jpg" alt="Profile Picture">
  <div>
    <h2 class="capsLock extraBold">Gerda Oosterhuis</h2>
    <p>Hi! Ik ben Gerda, 23 jaar oud en woon in Amsterdam West. Denk jij de juiste persoon te zijn voor mijn aanvraag? Neem dan zeker even contact met mij op!</p>
    <a href="#">
      <button class="extraBold">
        Neem contact met mij op!
      </button>
    </a>
  </div>

</section>

<%- include('./partials/foot') %>